<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lighter background for better visibility -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorOnSecondary" />
            <corners android:radius="40dp" />
        </shape>
    </item>

    <!-- Thin border using Material 3 Primary Container color -->
    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorOnSecondary" />
            <corners android:radius="36dp" />
        </shape>
    </item>

    <!-- Inset the original foreground inside the border -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <bitmap
            android:src="@mipmap/ic_launcher_foreground"
            android:gravity="center" />
    </item>
</layer-list>